---
import "../styles/global.css";
import AsideMenu from '../components/AsideMenu.astro';
import { ViewTransitions } from "astro:transitions";
import { Player } from "../components/react/Player";
import NavbarMenu from "@/components/astro/NavbarMenu.astro";

---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Spotify</title>
		<ViewTransitions fallback="none" />
	</head>
	<body>

		<div id="app" class="relative h-screen p-2 gap-2">
			<header class="[grid-area:navbar]">
			  <NavbarMenu />
			</header>
			<aside class="[grid-area:aside] flex flex-col overflow-y-auto rounded-xl bg-zinc-900 p-2">
			  <AsideMenu />
			</aside>
			<main class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto">
			  <slot />
			</main>
			<footer class="[grid-area:player] h-[88px] relative z-[9999] ">
			  <Player client:load transition:name="media-player" transition:persist />
			</footer>
		  </div>
		  
		  

	</body>
</html>

<style>
	#app {
  display: grid;
  grid-template-areas:
    "navbar navbar"
    "aside main"
    "player player";
  grid-template-columns: 420px 1fr;
  grid-template-rows: auto 1fr auto; 
}

</style>


<style>
	html{
		font-family: "CircularStd", system-ui, sans-serif;
		background: #000 ;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	@font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }



</style>
	